{
  "installCommand": "pip install -r requirements-webapp.txt",
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": [
          "apps/webapp/**",
          "apps/admin/**",
          "core/**",
          "config/**",
          "assets/**"
        ]
      }
    }
  ],
  "crons": [
    { "path": "/admin/cron/daily-reminders", "schedule": "0 8 * * *" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "api/index.py" }
  ]
}