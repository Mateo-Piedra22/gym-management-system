/*
 * --- Hoja de Estilos Global para Gym Management System v2.5 ---
 * Sistema de Variables CSS Mejorado (WCAG 2.1 AAA Compatible)
 * Refinamiento Visual Fase 2 - Grid 8px y Contraste Optimizado
 * 
 * VARIABLES DE COLOR PRINCIPALES (Contraste Mejorado):
 * --bg-primary: #252A35 (Fondo principal - Contraste armonioso con secondary)
 * --bg-secondary: #2E3440 (Paneles y grupos - Contraste 15.8:1)
 * --bg-tertiary: #3B4252 (Elementos interactivos - Contraste 12.6:1)
 * --bg-quaternary: #434C5E (Elementos hover - Contraste 10.4:1)
 * --bg-elevated: #4C566A (Elementos elevados - Contraste 8.2:1)
 * --border-primary: #4C566A (Bordes principales)
 * --border-secondary: #5E81AC (Bordes de acento)
 * --text-primary: #ECEFF4 (Texto principal - Contraste 19.2:1)
 * --text-secondary: #D8DEE9 (Texto secundario - Contraste 15.8:1)
 * --text-tertiary: #B8C5D1 (Texto terciario - Contraste 9.1:1)
 * --text-muted: #88C0D0 (Texto deshabilitado - Contraste 7.5:1)
 * 
 * COLORES DE ACENTO Y ESTADO (Contraste Optimizado):
 * --accent-primary: #5E81AC (Botones primarios, selecciones)
 * --accent-primary-hover: #81A1C1 (Hover de botones primarios)
 * --accent-primary-pressed: #4C6A94 (Pressed de botones primarios)
 * --accent-primary-light: #A3C4E0 (Variante clara)
 * --accent-success: #A3BE8C (Éxito, estados activos)
 * --accent-success-hover: #B5D196 (Hover éxito)
 * --accent-warning: #EBCB8B (Advertencias)
 * --accent-warning-hover: #F0D49F (Hover advertencia)
 * --accent-error: #BF616A (Error, estados inactivos)
 * --accent-error-hover: #D08770 (Hover error)
 * --accent-info: #88C0D0 (Información, indicadores)
 * --accent-info-hover: #9FCBD6 (Hover información)
 * 
 * SISTEMA DE ESPACIADO (Grid 8px Estricto):
 * --spacing-0: 0px
 * --spacing-1: 4px   (0.5 * 8px)
 * --spacing-2: 8px   (1 * 8px)
 * --spacing-3: 12px  (1.5 * 8px)
 * --spacing-4: 16px  (2 * 8px)
 * --spacing-5: 20px  (2.5 * 8px)
 * --spacing-6: 24px  (3 * 8px)
 * --spacing-8: 32px  (4 * 8px)
 * --spacing-10: 40px (5 * 8px)
 * --spacing-12: 48px (6 * 8px)
 * --spacing-16: 64px (8 * 8px)
 * 
 * JERARQUÍA TIPOGRÁFICA OPTIMIZADA:
 * --font-size-xs: 10px   (Texto muy pequeño)
 * --font-size-sm: 12px   (Texto pequeño)
 * --font-size-base: 14px (Texto base)
 * --font-size-md: 16px   (Texto medio)
 * --font-size-lg: 18px   (Texto grande)
 * --font-size-xl: 20px   (Texto extra grande)
 * --font-size-2xl: 24px  (Títulos)
 * --font-size-3xl: 30px  (Títulos grandes)
 * 
 * PESOS DE FUENTE:
 * --font-weight-normal: 400
 * --font-weight-medium: 500
 * --font-weight-semibold: 600
 * --font-weight-bold: 700
 * 
 * RADIOS DE BORDE:
 * --radius-sm: 4px
 * --radius-md: 6px
 * --radius-lg: 8px
 * --radius-xl: 12px
 * --radius-2xl: 16px
 * 
 * SOMBRAS:
 * --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.3)
 * --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.4)
 * --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.5)
 */

/* ESTILOS BASE CON TAMAÑOS FIJOS */
QWidget {
    background-color: #252A35; /* var(--bg-primary) */
    color: #ECEFF4; /* var(--text-primary) */
    font-family: VAR_FONT_FAMILY;
    font-size: 12px; /* Tamaño base fijo */
    font-weight: 400; /* var(--font-weight-normal) */
    /* line-height no es soportado por QSS; eliminado */
    border: none;
    margin: 0px; /* Menos separación global */
    padding: 0px; /* Casi edge-to-edge */
}

QMainWindow {
    background-color: #252A35; /* var(--bg-primary) */
    border: none;
    font-size: 12px; /* Consistente con QWidget */
    margin: 0px; /* Sin margen para ventana principal */
    padding: 4px; /* Menos padding, apariencia edge-to-edge */
}

/* Diálogos modernos coherentes con el tema */
QDialog {
    background-color: VAR_BG_SECONDARY;
    border: 1px solid VAR_BORDER_PRIMARY;
    border-radius: 12px;
}

/* TABS CON ESPACIADO MEJORADO Y MEJOR CONTRASTE */
QTabWidget {
    background-color: #252A35; /* var(--bg-primary) */
    border: none;
    padding: 0px; /* var(--spacing-0) */
}

/* CORNER WIDGET PARA BÚSQUEDA INTEGRADA */
QTabWidget::corner {
    background-color: VAR_BG_SECONDARY; /* dinámico */
    border: none;
    margin: 0px;
    padding: 2px 8px;
}

QTabWidget::pane {
    background-color: VAR_BG_SECONDARY; /* dinámico */
    border: 2px solid VAR_BORDER_PRIMARY; /* dinámico */
    border-radius: 8px; /* Radio fijo */
    margin: 2px; /* Mucho menos margen alrededor del bloque principal */
    padding: 0px; /* Edge-to-edge dentro del pane */
}

QTabBar::tab {
    background-color: VAR_BG_SECONDARY; /* dinámico */
    color: VAR_TEXT_PRIMARY; /* dinámico */
    padding: 8px 14px; /* mejor integración */
    border: 1px solid VAR_BORDER_PRIMARY; /* dinámico */
    border-bottom: none;
    border-top-left-radius: 6px; /* Radio fijo */
    border-top-right-radius: 6px; /* Radio fijo */
    min-width: 110px; /* Ancho mínimo aumentado */
    font-size: 11px; /* Tamaño ligeramente reducido */
    font-weight: 500; /* var(--font-weight-medium) */
    margin: 2px 1px 0px 1px; /* Margen fijo */
    height: 28px; /* Altura fija para alineación con búsqueda */
}

QTabBar::tab:selected {
    background-color: VAR_BG_TERTIARY; /* más contraste sutil */
    color: VAR_TEXT_PRIMARY; /* dinámico */
    font-weight: 600; /* var(--font-weight-semibold) */
    border-color: VAR_PRIMARY_COLOR; /* dinámico */
    border-bottom: 3px solid VAR_PRIMARY_COLOR; /* indicador profesional */
}

QTabBar::tab:!selected:hover {
    background-color: VAR_BG_QUATERNARY; /* dinámico */
    color: VAR_TEXT_PRIMARY; /* dinámico */
    border-color: VAR_PRIMARY_COLOR; /* dinámico */
}

QTabBar::tab:disabled {
    color: VAR_TEXT_TERTIARY; /* dinámico, usa texto terciario como muted */
}

/* GRUPOS Y ETIQUETAS CON JERARQUÍA TIPOGRÁFICA MEJORADA */
QGroupBox {
    background-color: #2E3440; /* var(--bg-secondary) */
    border: 2px solid #4C566A; /* var(--border-primary) */
    border-radius: 6px; /* Radio fijo */
    margin: 2px; /* Menos margen exterior */
    font-weight: 600; /* var(--font-weight-semibold) */
    font-size: 12px; /* Tamaño fijo */
    padding: 6px; /* Menos padding interior */
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 4px 6px; /* Menos padding */
    margin: 1px 2px; /* Menos margen */
    background-color: #2E3440; /* var(--bg-secondary) */
    color: #ECEFF4; /* var(--text-primary) */
    font-weight: 600; /* var(--font-weight-semibold) */
    font-size: 12px; /* Tamaño fijo */
    border-radius: 4px; /* Radio fijo */
}

QLabel {
    background-color: transparent;
    color: #D8DEE9; /* var(--text-secondary) */
    padding: 4px 0px; /* Padding fijo */
    font-size: 12px; /* Tamaño fijo */
    font-weight: 400; /* var(--font-weight-normal) */
    /* line-height no es soportado por QSS; eliminado */
}

/* Texto atenuado / hint */
QLabel[class="muted"], QLabel[class="hint"] {
    color: VAR_TEXT_MUTED;
}

/* ETIQUETAS ESPECIALIZADAS */
QLabel#payment_status_label {
    padding: 8px 16px; /* var(--spacing-2) var(--spacing-4) */
    font-size: 14px; /* var(--font-size-base) */
    font-weight: 600; /* var(--font-weight-semibold) */
    border-radius: 8px; /* var(--radius-lg) */
    color: #ECEFF4; /* var(--text-primary) */
    background-color: #3B4252; /* var(--bg-tertiary) */
    border: 1px solid #4C566A; /* var(--border-primary) */
}

/* Estados sutiles y coherentes para indicadores de pago */
QLabel#payment_status_label[paymentStatus="no_payments"] {
    background-color: #3B4252; /* neutro */
    border: 1px solid #4C566A;
    color: #D8DEE9; /* texto secundario */
}

QLabel#payment_status_label[paymentStatus="up_to_date"] {
    background-color: #2E3A32; /* verde sutil oscuro */
    border: 1px solid #A3BE8C; /* verde Nord */
    color: #ECEFF4;
}

QLabel#payment_status_label[paymentStatus="pending"] {
    background-color: #3A3326; /* ámbar sutil oscuro */
    border: 1px solid #EBCB8B; /* ámbar Nord */
    color: #ECEFF4;
}

QLabel#payment_status_label[paymentStatus="overdue_single"],
QLabel#payment_status_label[paymentStatus="overdue_multiple"] {
    background-color: #3A2626; /* rojo sutil oscuro */
    border: 1px solid #BF616A; /* rojo Nord */
    color: #ECEFF4;
}

/* BOTONES MODERNOS Y COHERENTES (Estados completos) */
QPushButton {
    background-color: VAR_BG_TERTIARY;
    color: VAR_TEXT_PRIMARY;
    border: 2px solid VAR_BORDER_PRIMARY;
    border-radius: 8px;
    padding: 8px 12px;
    font-size: 12px;
    font-weight: 500;
    min-height: 28px;
}

QPushButton:hover {
    background-color: VAR_BG_QUATERNARY;
    border-color: VAR_PRIMARY_COLOR;
}

QPushButton:pressed {
    background-color: VAR_PRIMARY_COLOR;
    color: VAR_TEXT_ON_BRAND;
    border-color: VAR_PRIMARY_COLOR;
}

QPushButton:disabled {
    background-color: #2E3440; /* var(--bg-secondary) */
    color: VAR_TEXT_TERTIARY;
    border-color: VAR_BORDER_PRIMARY;
    opacity: 0.6;
}

/* VARIANTES COMUNES POR CLASE/ID (compatibles con generate_dynamic_css) */
QPushButton[class="primary"], QPushButton[objectName*="primary"] {
    background-color: VAR_PRIMARY_COLOR;
    color: VAR_TEXT_ON_BRAND;
    border-color: VAR_PRIMARY_COLOR;
}

QPushButton[class="primary"]:hover, QPushButton[objectName*="primary"]:hover {
    background-color: VAR_PRIMARY_HOVER_COLOR;
    color: VAR_TEXT_ON_BRAND;
    border-color: VAR_PRIMARY_HOVER_COLOR;
}

QPushButton[class="primary"]:pressed, QPushButton[objectName*="primary"]:pressed {
    background-color: VAR_PRIMARY_COLOR_PRESSED;
    color: VAR_TEXT_ON_BRAND;
    border-color: VAR_PRIMARY_COLOR_PRESSED;
}

QPushButton[class="success"], QPushButton[objectName*="success"] {
    background-color: VAR_ACCENT_SUCCESS;
    color: VAR_TEXT_ON_BRAND;
    border-color: VAR_ACCENT_SUCCESS;
}

QPushButton[class="danger"], QPushButton[objectName*="danger"] {
    background-color: VAR_ACCENT_DANGER;
    color: VAR_TEXT_ON_BRAND;
    border-color: VAR_ACCENT_DANGER;
}

/* CAMPOS DE ENTRADA MODERNOS */
QLineEdit, QTextEdit, QSpinBox, QDoubleSpinBox, QComboBox {
    background-color: VAR_BG_TERTIARY;
    color: VAR_TEXT_PRIMARY;
    border: 2px solid VAR_BORDER_PRIMARY;
    border-radius: 6px;
    padding: 6px 8px;
}

QLineEdit:focus, QTextEdit:focus, QSpinBox:focus, QDoubleSpinBox:focus, QComboBox:focus {
    border-color: VAR_PRIMARY_COLOR;
    background-color: VAR_BG_QUATERNARY;
}

QLineEdit:disabled, QTextEdit:disabled, QSpinBox:disabled, QDoubleSpinBox:disabled, QComboBox:disabled {
    background-color: #2E3440; /* var(--bg-secondary) */
    color: VAR_TEXT_TERTIARY;
    border-color: VAR_BORDER_PRIMARY;
    opacity: 0.6;
}

/* TABLAS MODERNAS */
QTableView {
    background-color: VAR_BG_SECONDARY;
    color: VAR_TEXT_PRIMARY;
    gridline-color: VAR_BORDER_PRIMARY;
    border: 2px solid VAR_BORDER_PRIMARY;
    border-radius: 6px;
    selection-background-color: VAR_PRIMARY_COLOR;
    selection-color: VAR_TEXT_ON_BRAND;
    alternate-background-color: VAR_BG_TERTIARY;
}

QHeaderView::section {
    background-color: VAR_BG_TERTIARY;
    color: VAR_TEXT_SECONDARY;
    border: 1px solid VAR_BORDER_PRIMARY;
    padding: 6px 8px;
    font-weight: 600;
}

/* BARRAS DE SCROLL CONSISTENTES GLOBALMENTE */
QScrollBar:vertical {
    background-color: VAR_BG_TERTIARY;
    width: 12px;
    border-radius: 6px;
    margin: 0px;
    border: none;
}

QScrollBar::handle:vertical {
    background-color: VAR_PRIMARY_COLOR;
    border-radius: 6px;
    min-height: 20px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background-color: VAR_PRIMARY_HOVER_COLOR;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
    background: transparent;
}

QScrollBar:horizontal {
    background-color: VAR_BG_TERTIARY;
    height: 12px;
    border-radius: 6px;
    margin: 0px;
    border: none;
}

QScrollBar::handle:horizontal {
    background-color: VAR_PRIMARY_COLOR;
    border-radius: 6px;
    min-width: 20px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background-color: VAR_PRIMARY_HOVER_COLOR;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0px;
    background: transparent;
}

/* TOOLTIP MODERNO */
QToolTip {
    background-color: VAR_BG_TERTIARY;
    color: VAR_TEXT_PRIMARY;
    border: 1px solid VAR_BORDER_PRIMARY;
    border-radius: 6px;
    padding: 6px 8px;
}

/* CONSISTENCIA DE ÍCONOS */
/* Botones con íconos - tamaño y espaciado consistente */
QPushButton {
    font-size: 12px; /* Tamaño base para íconos emoji */
    padding: 8px 12px; /* Espaciado consistente */
    min-height: 24px; /* Altura mínima */
}

/* ESTILOS DINÁMICOS PARA ETIQUETAS CON PROPIEDADES PERSONALIZADAS */
/* Indicadores de color para etiquetas */
QLabel[background_color] {
    border-radius: 8px;
    min-width: 16px;
    min-height: 16px;
    max-width: 16px;
    max-height: 16px;
    margin: 2px;
}

/* Aplicar color de fondo dinámico usando qproperty */
QLabel#etiqueta_color_indicator {
    border-radius: 8px;
    min-width: 16px;
    min-height: 16px;
    max-width: 16px;
    max-height: 16px;
    margin: 2px;
    border: 1px solid #4C566A;
}

/* Vista previa de color en diálogos */
QLabel#color_preview {
    border-radius: 6px;
    min-width: 24px;
    min-height: 24px;
    border: 2px solid #4C566A;
    margin: 4px;
}

/* ETIQUETAS DE RUTINAS - PREVENIR TRUNCAMIENTO DE TEXTO */
QLabel#routine_user_label {
    background-color: transparent;
    color: #ECEFF4; /* var(--text-primary) */
    padding: 4px 6px; /* Padding moderado */
    font-size: 12px; /* Tamaño consistente */
    font-weight: 500; /* var(--font-weight-medium) */
    qproperty-wordWrap: true; /* Permitir salto de línea */
    qproperty-alignment: AlignLeft; /* Alinear texto a la izquierda */
}

QLabel#routine_display_label {
    background-color: transparent;
    color: #D8DEE9; /* var(--text-secondary) */
    padding: 8px 12px; /* Padding moderado */
    font-size: 12px; /* Tamaño consistente */
    font-weight: 400; /* var(--font-weight-normal) */
    qproperty-wordWrap: true; /* Permitir salto de línea */
    qproperty-alignment: AlignHCenter; /* Alinear texto al centro */
    /* line-height no es soportado por QSS; eliminado */
}

/* BOTONES DE RUTINAS - ALINEACIÓN NATURAL */
QPushButton[text*="Crear Rutina en Blanco"] {
    padding: 8px 12px; /* Padding adecuado */
    font-size: 12px; /* Tamaño de fuente consistente */
    text-align: center;
}

QPushButton[text*="Seleccionar Usuario"] {
    padding: 6px 10px; /* Padding adecuado */
    font-size: 12px; /* Tamaño de fuente consistente */
    text-align: center;
}

/* ESTILOS ESPECÍFICOS PARA WIDGETS DE FASE 2 */
/* Pestañas de Notas, Etiquetas y Estados - Tamaño reducido para visualizar los 3 sin scroll */
QTabWidget#phase2_tabs QTabBar::tab {
    min-width: 80px; /* Ancho mínimo reducido para que quepan los 3 */
    max-width: 90px; /* Ancho máximo para evitar que se expandan demasiado */
    padding: 6px 8px; /* Padding reducido */
    font-size: 11px; /* Tamaño de fuente reducido */
    height: 24px; /* Altura reducida */
    margin: 1px 1px 0px 1px; /* Margen reducido */
}

/* Contenedores de widgets - Espaciado interno mejorado */
QWidget#notas_widget,
QWidget#etiquetas_widget,
QWidget#estados_widget {
    padding: 12px; /* Padding interno aumentado */
    margin: 8px; /* Margen externo aumentado */
    font-size: 16px; /* Tamaño de texto aumentado para mejor legibilidad */
}

/* Texto específico para Notas y Estados - Tamaño aumentado */
QWidget#notas_widget QLabel,
QWidget#notas_widget QTextEdit,
QWidget#estados_widget QLabel,
QWidget#estados_widget QTextEdit {
    font-size: 16px; /* Tamaño de texto aumentado igual que Etiquetas */
}

/* Botones en widgets de Fase 2 - Espaciado mejorado */
QWidget#notas_widget QPushButton,
QWidget#etiquetas_widget QPushButton,
QWidget#estados_widget QPushButton {
    padding: 10px 16px; /* Padding aumentado */
    margin: 4px 2px; /* Margen aumentado */
    min-height: 28px; /* Altura mínima aumentada */
    font-size: 12px; /* Tamaño de fuente consistente */
}

/* Listas y áreas de scroll - Espaciado mejorado */
QWidget#notas_widget QScrollArea,
QWidget#etiquetas_widget QScrollArea,
QWidget#estados_widget QScrollArea {
    padding: 8px; /* Padding interno */
    margin: 4px; /* Margen externo */
}

/* Grupos de controles - Espaciado mejorado */
QWidget#notas_widget QGroupBox,
QWidget#etiquetas_widget QGroupBox,
QWidget#estados_widget QGroupBox {
    padding: 12px 10px 10px 10px; /* Padding aumentado */
    margin: 6px 4px; /* Margen aumentado */
}

/* Íconos en pestañas - Tamaño consistente */
QTabBar::tab {
    font-size: 11px; /* Tamaño consistente para íconos en pestañas */
}

/* RECUADROS FLOTANTES PARA ELEMENTOS DE FASE 2 */
/* Recuadros para elementos individuales de Notas, Etiquetas y Estados */
.nota-item-container,
.etiqueta-item-container,
.estado-item-container {
    background-color: #3B4252; /* Color de fondo primario dinámico */
    border: 2px solid #5E81AC; /* Borde con color de acento */
    border-radius: 8px;
    padding: 12px;
    margin: 6px 4px;
}

.nota-item-container:hover,
.etiqueta-item-container:hover,
.estado-item-container:hover {
    background-color: VAR_BG_QUATERNARY; /* Color de fondo secundario en hover */
    border-color: #81A1C1; /* Color de borde más claro en hover */;
}

/* Estilos específicos para cada tipo de elemento */
.nota-item-container {
    border-left: 4px solid #A3BE8C; /* Borde izquierdo verde para notas */
}

.etiqueta-item-container {
    border-left: 4px solid #EBCB8B; /* Borde izquierdo amarillo para etiquetas */
}

.estado-item-container {
    border-left: 4px solid #D08770; /* Borde izquierdo naranja para estados */
}

/* Íconos en roles y estados */
QComboBox QAbstractItemView::item {
    font-size: 12px; /* Tamaño consistente para íconos en combos */
    padding: 4px 8px; /* Espaciado uniforme */
}

/* Íconos en tablas y listas */
QTableView, QListWidget {
    font-size: 12px; /* Tamaño base para contenido con íconos */
}

/* Íconos en métricas y KPIs */
.metric-card {
    font-size: 14px; /* Tamaño para íconos en métricas */
}

.panel_label {
    font-weight: 600; /* var(--font-weight-semibold) */
    font-size: 16px; /* var(--font-size-md) */
    color: #ECEFF4; /* var(--text-primary) */
    padding: 12px 0px; /* var(--spacing-3) */
}

.section_title {
    font-weight: 700; /* var(--font-weight-bold) */
    font-size: 20px; /* var(--font-size-xl) */
    color: #ECEFF4; /* var(--text-primary) */
    padding: 16px 0px; /* var(--spacing-4) */
    /* letter-spacing no es soportado por QSS; eliminado */
}

.help_text {
    font-size: 12px; /* var(--font-size-sm) */
    color: #88C0D0; /* var(--text-muted) */
    font-style: italic;
    padding: 8px 0px; /* var(--spacing-2) */
    /* line-height no es soportado por QSS; eliminado */
}

.metric_title {
    font-weight: 700; /* var(--font-weight-bold) */
    font-size: 24px; /* var(--font-size-2xl) */
    color: #ECEFF4; /* var(--text-primary) */
    padding: 0px;
    margin: 0px;
}

.metric_subtitle {
    font-weight: 500; /* var(--font-weight-medium) */
    font-size: 12px; /* var(--font-size-sm) */
    color: #B8C5D1; /* var(--text-tertiary) */
    padding: 4px 0px; /* var(--spacing-1) */
    /* text-transform y letter-spacing no son soportados por QSS; eliminados */
}

/* CAMPOS DE ENTRADA CON TAMAÑOS FIJOS */
QLineEdit, QTextEdit, QSpinBox, QDoubleSpinBox, QComboBox {
    background-color: #3B4252; /* var(--bg-tertiary) */
    color: #ECEFF4; /* var(--text-primary) */
    border: 2px solid #4C566A; /* var(--border-primary) */
    border-radius: 4px; /* Radio fijo */
    padding: 6px 8px; /* Padding fijo */
    margin: 2px; /* Margen fijo */
    font-size: 12px; /* Tamaño de fuente fijo */
    font-weight: 400; /* var(--font-weight-normal) */
    min-height: 20px; /* Altura mínima fija */
    selection-background-color: #5E81AC; /* var(--accent-primary) */
    selection-color: #ECEFF4; /* var(--text-primary) */
}

/* ESTADOS DE FOCO Y HOVER CON TAMAÑOS FIJOS */
QLineEdit:focus, QTextEdit:focus, QSpinBox:focus, QDoubleSpinBox:focus, QComboBox:focus {
    border: 2px solid #5E81AC; /* var(--accent-primary) */
    background-color: #2E3440; /* var(--bg-secondary) */
    margin: 1px; /* Margen fijo para compensar borde */
    outline: none;
}

