    padding: 4px; /* var(--spacing-1) */
}

QSlider::groove:horizontal {
    border: 1px solid #4C566A; /* var(--border-primary) */
    height: 6px;
    background: #2E3440; /* var(--bg-secondary) */
    border-radius: 3px;
    margin: 0px;
}

QSlider::groove:vertical {
    border: 1px solid #4C566A; /* var(--border-primary) */
    width: 6px;
    background: #2E3440; /* var(--bg-secondary) */
    border-radius: 3px;
    margin: 0px;
}

QSlider::handle:horizontal {
    background: #5E81AC; /* var(--accent-primary) */
    border: 2px solid #5E81AC; /* var(--accent-primary) */
    width: 18px;
    height: 18px;
    margin: -7px 0px;
    border-radius: 9px;
}

QSlider::handle:vertical {
    background: #5E81AC; /* var(--accent-primary) */
    border: 2px solid #5E81AC; /* var(--accent-primary) */
    width: 18px;
    height: 18px;
    margin: 0px -7px;
    border-radius: 9px;
}

QSlider::handle:horizontal:hover,
QSlider::handle:vertical:hover {
    background: #81A1C1; /* var(--accent-primary-hover) */
    border-color: #81A1C1; /* var(--accent-primary-hover) */
}

QSlider::handle:horizontal:pressed,
QSlider::handle:vertical:pressed {
    background: #4C7A9E;
    border-color: #4C7A9E;
}

QSlider::sub-page:horizontal {
    background: #5E81AC; /* var(--accent-primary) */
    border: 1px solid #5E81AC; /* var(--accent-primary) */
    height: 6px;
    border-radius: 3px;
}

QSlider::sub-page:vertical {
    background: #5E81AC; /* var(--accent-primary) */
    border: 1px solid #5E81AC; /* var(--accent-primary) */
    width: 6px;
    border-radius: 3px;
}

QSlider::add-page:horizontal {
    background: #3B4252; /* var(--bg-tertiary) */
    border: 1px solid #4C566A; /* var(--border-primary) */
    height: 6px;
    border-radius: 3px;
}

QSlider::add-page:vertical {
    background: #3B4252; /* var(--bg-tertiary) */
    border: 1px solid #4C566A; /* var(--border-primary) */
    width: 6px;
    border-radius: 3px;
}

QSlider:disabled {
    opacity: 0.5;
}

QSlider::groove:disabled {
    background: #3B4252; /* var(--bg-tertiary) */
    border-color: #4C566A; /* var(--border-primary) */
}

QSlider::handle:disabled {
    background: #4C566A; /* var(--border-primary) */
    border-color: #4C566A; /* var(--border-primary) */
}

QSlider::sub-page:disabled {
    background: #4C566A; /* var(--border-primary) */
    border-color: #4C566A; /* var(--border-primary) */
}

/* MENÚS CONTEXTUALES CON SISTEMA CSS DINÁMICO */
QMenu {
    background-color: #2E3440; /* var(--bg-secondary) */
    border: 2px solid #4C566A; /* var(--border-primary) */
    border-radius: 8px; /* var(--radius-lg) */
    padding: 8px 4px; /* var(--spacing-2) var(--spacing-1) */
    margin: 0px;
    color: #ECEFF4; /* var(--text-primary) */
    font-size: 12px; /* var(--font-size-sm) */
    font-weight: 400; /* var(--font-weight-normal) */
    min-width: 180px;
    /* box-shadow no es soportado por QSS; eliminado */
}

QMenu::item {
    background-color: transparent;
    color: #D8DEE9; /* var(--text-secondary) */
    padding: 8px 16px; /* var(--spacing-2) var(--spacing-4) */
    margin: 2px 4px; /* var(--spacing-half) var(--spacing-1) */
    border-radius: 6px; /* var(--radius-md) */
    font-size: 12px; /* var(--font-size-sm) */
    font-weight: 400; /* var(--font-weight-normal) */
    min-height: 20px;
    border: 1px solid transparent;
}

QMenu::item:selected {
    background-color: #5E81AC; /* var(--accent-primary) */
    color: #ECEFF4; /* var(--text-primary) */
    border-color: #5E81AC; /* var(--accent-primary) */
    font-weight: 500; /* var(--font-weight-medium) */
}

QMenu::item:pressed {
    background-color: #4C7A9E; /* var(--accent-primary-pressed) */
    color: #ECEFF4; /* var(--text-primary) */
    border-color: #4C7A9E;
}

QMenu::item:disabled {
    background-color: transparent;
    color: #4C566A; /* var(--border-primary) */
    opacity: 0.5;
}

QMenu::separator {
    height: 1px;
    background-color: #4C566A; /* var(--border-primary) */
    margin: 6px 8px; /* var(--spacing-1.5) var(--spacing-2) */
    border: none;
}

QMenu::icon {
    padding-left: 4px; /* var(--spacing-1) */
    padding-right: 8px; /* var(--spacing-2) */
}

/* MENÚS CONTEXTUALES CON BRANDING DINÁMICO */
QMenu[class="context_menu"] {
    background-color: VAR_BG_SECONDARY;
    border: 2px solid VAR_BORDER_PRIMARY;
    color: VAR_TEXT_PRIMARY;
}

QMenu[class="context_menu"]::item {
    color: VAR_TEXT_SECONDARY;
}

QMenu[class="context_menu"]::item:selected {
    background-color: VAR_PRIMARY_COLOR;
    color: VAR_TEXT_PRIMARY;
    border-color: VAR_PRIMARY_COLOR;
}

QMenu[class="context_menu"]::item:pressed {
    background-color: VAR_PRIMARY_COLOR_PRESSED;
    color: VAR_TEXT_PRIMARY;
}

QMenu[class="context_menu"]::separator {
    background-color: VAR_BORDER_PRIMARY;
}

/* ========================================
 * WIDGET DE BÚSQUEDA GLOBAL - CSS DINÁMICO
 * ======================================== */

/* CONTENEDOR PRINCIPAL DEL WIDGET DE BÚSQUEDA */
GlobalSearchWidget {
    background-color: #2E3440; /* var(--bg-secondary) */
    border: 2px solid #4C566A; /* var(--border-primary) */
    border-radius: 8px; /* var(--radius-lg) */
    padding: 0px;
    margin: 0px;
    font-size: 12px; /* var(--font-size-sm) */
    min-width: 280px;
    max-width: 400px;
}

/* CAMPO DE ENTRADA DE BÚSQUEDA */
GlobalSearchWidget QLineEdit {
    background-color: #3B4252; /* var(--bg-tertiary) */
    color: #ECEFF4; /* var(--text-primary) */
    border: 2px solid #4C566A; /* var(--border-primary) */
    border-radius: 6px; /* var(--radius-md) */
    padding: 8px 12px; /* var(--spacing-2) var(--spacing-3) */
    margin: 4px; /* var(--spacing-1) */
    font-size: 13px; /* var(--font-size-base) - 1px */
    font-weight: 400; /* var(--font-weight-normal) */
    min-height: 24px;
    selection-background-color: #5E81AC; /* var(--accent-primary) */
    selection-color: #ECEFF4; /* var(--text-primary) */
}

GlobalSearchWidget QLineEdit:focus {
    border: 2px solid #5E81AC; /* var(--accent-primary) */
    background-color: #2E3440; /* var(--bg-secondary) */
    /* box-shadow no es soportado por QSS; eliminado */
}

GlobalSearchWidget QLineEdit:hover {
    border-color: #81A1C1; /* var(--accent-primary-hover) */
    background-color: VAR_BG_QUATERNARY; /* var(--bg-quaternary) */
}

/* PANEL DE RESULTADOS FLOTANTE */
GlobalSearchWidget QFrame#results_frame {
    background-color: #2E3440; /* var(--bg-secondary) */
    border: 2px solid #4C566A; /* var(--border-primary) */
    border-radius: 8px; /* var(--radius-lg) */
    padding: 4px; /* var(--spacing-1) */
    margin: 0px;
    /* box-shadow no es soportado por QSS; eliminado */
}

/* ÁREA DE SCROLL DE RESULTADOS */
GlobalSearchWidget QScrollArea {
    background-color: transparent;
    border: none;
    border-radius: 6px; /* var(--radius-md) */
    padding: 0px;
    margin: 0px;
}

GlobalSearchWidget QScrollArea QWidget#scrollAreaWidgetContents {
    background-color: transparent;
    padding: 4px; /* var(--spacing-1) */
}

/* BARRA DE SCROLL PERSONALIZADA */
GlobalSearchWidget QScrollBar:vertical {
    background-color: #3B4252; /* var(--bg-tertiary) */
    width: 12px;
    border-radius: 6px;
    margin: 0px;
    border: none;
}

GlobalSearchWidget QScrollBar::handle:vertical {
    background-color: #5E81AC; /* var(--accent-primary) */
    border-radius: 6px;
    min-height: 20px;
    margin: 2px;
}

GlobalSearchWidget QScrollBar::handle:vertical:hover {
    background-color: #81A1C1; /* var(--accent-primary-hover) */
}

GlobalSearchWidget QScrollBar::add-line:vertical,
GlobalSearchWidget QScrollBar::sub-line:vertical {
    height: 0px;
    background: transparent;
}

/* ELEMENTOS INDIVIDUALES DE RESULTADO */
SearchResultItem {
    background-color: #3B4252; /* var(--bg-tertiary) */
    border: 1px solid transparent;
    border-radius: 6px; /* var(--radius-md) */
    padding: 8px 12px; /* var(--spacing-2) var(--spacing-3) */
    margin: 2px; /* var(--spacing-half) */
    min-height: 32px;
    font-size: 12px; /* var(--font-size-sm) */
    color: #D8DEE9; /* var(--text-secondary) */
}

SearchResultItem:hover {
    background-color: VAR_BG_QUATERNARY; /* var(--bg-quaternary) */
    border-color: #5E81AC; /* var(--accent-primary) */
    color: #ECEFF4; /* var(--text-primary) */
    cursor: pointer;
}

SearchResultItem:pressed {
    background-color: #5E81AC; /* var(--accent-primary) */
    border-color: #5E81AC; /* var(--accent-primary) */
    color: #ECEFF4; /* var(--text-primary) */
}

/* TEXTO PRINCIPAL DEL RESULTADO */
SearchResultItem QLabel#main_text {
    background-color: transparent;
    color: #ECEFF4; /* var(--text-primary) */
    font-size: 13px; /* var(--font-size-base) - 1px */
    font-weight: 500; /* var(--font-weight-medium) */
    padding: 0px;
    margin: 0px;
}

/* TEXTO SECUNDARIO DEL RESULTADO */
SearchResultItem QLabel#secondary_text {
    background-color: transparent;
    color: #B8C5D1; /* var(--text-tertiary) */
    font-size: 11px; /* var(--font-size-xs) + 1px */
    font-weight: 400; /* var(--font-weight-normal) */
    padding: 0px;
    margin: 0px;
    font-style: italic;
}

/* INDICADOR DE TIPO DE RESULTADO */
SearchResultItem QLabel#type_indicator {
    background-color: #5E81AC; /* var(--accent-primary) */
    color: #ECEFF4; /* var(--text-primary) */
    font-size: 10px; /* var(--font-size-xs) */
    font-weight: 600; /* var(--font-weight-semibold) */
    padding: 2px 6px; /* var(--spacing-half) var(--spacing-1.5) */
    border-radius: 4px; /* var(--radius-sm) */
    margin: 0px 4px 0px 0px;
    /* text-transform y letter-spacing no son soportados por QSS; eliminados */
}

/* VARIANTES DE INDICADORES POR TIPO */
SearchResultItem QLabel#type_indicator[text="USER"] {
    background-color: #A3BE8C; /* var(--accent-success) */
}

SearchResultItem QLabel#type_indicator[text="PROF"] {
    background-color: VAR_ACCENT_WARNING; /* var(--accent-warning) */
}

SearchResultItem QLabel#type_indicator[text="ROUT"] {
    background-color: VAR_ACCENT_INFO; /* var(--accent-info) */
}

SearchResultItem QLabel#type_indicator[text="EXER"] {
    background-color: #D08770; /* var(--accent-error-hover) */
}

/* MENSAJE DE "SIN RESULTADOS" */
GlobalSearchWidget QLabel#no_results_label {
    background-color: transparent;
    color: VAR_TEXT_MUTED; /* var(--text-muted) */
    font-size: 12px; /* var(--font-size-sm) */
    font-weight: 400; /* var(--font-weight-normal) */
    font-style: italic;
    padding: 16px; /* var(--spacing-4) */
    text-align: center;
    margin: 8px; /* var(--spacing-2) */
}

/* ANIMACIONES Y TRANSICIONES */
GlobalSearchWidget QFrame#results_frame {
    /* Transición suave para mostrar/ocultar */
    /* transition no es soportado por QSS; eliminado */
}

SearchResultItem {
    /* Transición suave para hover */
    /* transition no es soportado por QSS; eliminado */
}

/* ESTADOS ESPECIALES */
GlobalSearchWidget[expanded="true"] QFrame#results_frame {
    /* Panel expandido */
    border-color: #5E81AC; /* var(--accent-primary) */
}

GlobalSearchWidget[has_results="false"] QFrame#results_frame {
    /* Sin resultados */
    border-color: VAR_TEXT_MUTED; /* var(--text-muted) */
    border-style: dashed;
}

/* RESPONSIVE DESIGN */
@media (max-width: 768px) {
    GlobalSearchWidget {
        min-width: 240px;
        max-width: 320px;
    }
    
    GlobalSearchWidget QLineEdit {
        font-size: 12px;
        padding: 6px 10px;
    }
    
    SearchResultItem {
        padding: 6px 10px;
        min-height: 28px;
    }
}

