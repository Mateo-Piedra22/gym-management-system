# =============================================================================
# GYM MANAGEMENT SYSTEM - EJEMPLO DE VARIABLES (BASE ÚNICA)
# =============================================================================
# Plantilla para una sola base de datos (Neon o similar). Sin replicación.

# =============================================================================
# BASE DE DATOS (LOCAL ÚNICA)
# =============================================================================
DB_LOCAL_HOST=localhost
DB_LOCAL_PORT=5432
DB_LOCAL_DATABASE=gym_db
DB_LOCAL_USER=postgres
DB_LOCAL_PASSWORD=SETME_SECURE_PASSWORD

# Perfil (solo 'local')
DB_PROFILE=local

# Parámetros de conexión
DB_LOCAL_SSLMODE=require
DB_LOCAL_CONNECT_TIMEOUT=10
DB_LOCAL_APPLICATION_NAME=gym_management_system

# Timeouts y zona horaria
DB_STATEMENT_TIMEOUT=4s
DB_LOCK_TIMEOUT=2s
DB_IDLE_IN_TRX_TIMEOUT=30s
DB_TIME_ZONE=America/Argentina/Buenos_Aires

# Keepalives TCP
DB_KEEPALIVES_IDLE=30
DB_KEEPALIVES_INTERVAL=10
DB_KEEPALIVES_COUNT=3

# Fallbacks genéricos (algunas utilidades usan estos nombres)
DB_HOST=${DB_LOCAL_HOST}
DB_PORT=${DB_LOCAL_PORT}
DB_NAME=${DB_LOCAL_DATABASE}
DB_USER=${DB_LOCAL_USER}
DB_PASSWORD=${DB_LOCAL_PASSWORD}
DB_SSLMODE=${DB_LOCAL_SSLMODE}
DB_CONNECT_TIMEOUT=${DB_LOCAL_CONNECT_TIMEOUT}
DB_APPLICATION_NAME=${DB_LOCAL_APPLICATION_NAME}

# Alternativamente: usar una única URL/DSN de conexión (Railway/Neon)
# Si se define, tiene prioridad sobre DB_* y DB_LOCAL_*
# Ejemplo:
# DATABASE_URL=postgresql://neon_user:neon_pass@ep-tu-cluster.neon.tech:5432/neondb?sslmode=require&connect_timeout=12&application_name=railway

# =============================================================================
# SEGURIDAD Y AUTENTICACIÓN
# =============================================================================
DEV_PASSWORD=SETME_DEV_PASSWORD
OWNER_PASSWORD=SETME_OWNER_PASSWORD
WEBAPP_SESSION_SECRET=SETME_RANDOM_SESSION_SECRET
WHATSAPP_ACCESS_TOKEN=SETME_WHATSAPP_TOKEN

# =============================================================================
# APLICACIÓN
# =============================================================================
WEBAPP_BASE_URL=http://localhost:8000
CLIENT_BASE_URL=
SCHEDULED_TASKS_ENABLED=true

# Hosts confiables (Vercel + Railway)
# Lista separada por comas. Incluye tu dominio principal.
TRUSTED_HOSTS=tu-dominio.tld,*.vercel.app,*.vercel.dev,localhost,127.0.0.1,*.loca.lt

# Nota: En Vercel no necesitas definir VERCEL_URL/VERCEL_BRANCH_URL;
# la plataforma los inyecta y el sistema los detecta automáticamente.

# =============================================================================
# WHATSAPP BUSINESS (NUEVAS VARIABLES)
# =============================================================================
# IDs y credenciales de WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID=SETME_PHONE_NUMBER_ID
WHATSAPP_BUSINESS_ACCOUNT_ID=SETME_WABA_ID
WHATSAPP_VERIFY_TOKEN=SETME_WEBHOOK_VERIFY_TOKEN
WHATSAPP_APP_SECRET=SETME_APP_SECRET

# Preferencias opcionales de envío
NONBLOCKING_WHATSAPP_SEND=1
WHATSAPP_SEND_TIMEOUT_SECONDS=1.5

# =============================================================================
# GOOGLE CLOUD STORAGE (VIDEOS DE EJERCICIOS)
# =============================================================================
# Configuración para almacenar videos/medios de ejercicios en GCS.
# Para habilitarlo, completa al menos GCS_BUCKET_NAME y (opcional) GCS_PROJECT_ID.
# Asegúrate de que las credenciales estén disponibles mediante
# GOOGLE_APPLICATION_CREDENTIALS apuntando al JSON del servicio.

# Nombre del bucket de GCS donde se guardarán los medios
GCS_BUCKET_NAME=SETME_GCS_BUCKET

# ID del proyecto de Google Cloud (opcional; el cliente puede autodetectar)
GCS_PROJECT_ID=SETME_GCP_PROJECT_ID

# Ruta absoluta al archivo JSON del Service Account (opcional si usas ADC)
# Ejemplo (Windows): C:\\ruta\\a\\credenciales\\service-account.json
GOOGLE_APPLICATION_CREDENTIALS=SETME_PATH_TO_SA_JSON

# Prefijo/carpeta dentro del bucket para organizar los archivos
GCS_MEDIA_PREFIX=ejercicios

# Base pública para construir URLs (path-style por defecto)
# Ejemplo: https://storage.googleapis.com
GCS_PUBLIC_BASE_URL=https://storage.googleapis.com

# Si es '1', se intentará hacer público el objeto (ACL) tras subirlo.
# Con UBLA, confía en la política de bucket.
GCS_PUBLIC_READ=1